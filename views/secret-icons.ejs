<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Icons Export</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #0c0c0c 0%, #1a1a2e 100%);
            color: #e0e0e0;
            min-height: 100vh;
            padding: 16px;
        }
        .header {
            max-width: 1800px;
            margin: 0 auto 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 12px;
            background: rgba(255,255,255,0.03);
            padding: 16px 20px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.06);
        }
        .header h1 { 
            font-size: 20px; 
            color: #fff;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .header h1 svg { width: 24px; height: 24px; color: #f59e0b; }
        .header-stats { 
            color: #888; 
            font-size: 13px;
            display: flex;
            gap: 16px;
        }
        .header-stats span { color: #3b82f6; font-weight: 600; }
        .toolbar {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            align-items: center;
        }
        .search-input {
            padding: 8px 14px;
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 13px;
            width: 220px;
            transition: all 0.2s;
        }
        .search-input:focus { outline: none; border-color: #3b82f6; background: rgba(0,0,0,0.5); }
        .btn {
            padding: 8px 14px;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 500;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        .btn:hover { transform: translateY(-1px); box-shadow: 0 4px 12px rgba(59,130,246,0.3); }
        .btn-secondary { background: rgba(255,255,255,0.08); }
        .btn-secondary:hover { background: rgba(255,255,255,0.12); box-shadow: none; }
        .btn svg { width: 14px; height: 14px; }
        .grid {
            max-width: 1800px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 8px;
        }
        .item {
            background: rgba(255,255,255,0.03);
            border: 1px solid rgba(255,255,255,0.06);
            border-radius: 8px;
            padding: 10px 8px;
            text-align: center;
            transition: all 0.2s;
            cursor: pointer;
            position: relative;
        }
        .item:hover { 
            border-color: rgba(59,130,246,0.5); 
            background: rgba(59,130,246,0.08);
            transform: translateY(-2px);
        }
        .item.selected { 
            border-color: #22c55e; 
            background: rgba(34, 197, 94, 0.1);
        }
        .item.selected::after {
            content: '✓';
            position: absolute;
            top: 4px;
            right: 6px;
            font-size: 10px;
            color: #22c55e;
            font-weight: bold;
        }
        .item img {
            width: 48px;
            height: 48px;
            object-fit: contain;
            margin-bottom: 6px;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }
        .item-name {
            font-size: 10px;
            color: #ccc;
            line-height: 1.2;
            max-height: 24px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        .item-short {
            font-size: 8px;
            color: #555;
            font-family: monospace;
            margin-top: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .toast {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            color: #fff;
            padding: 12px 20px;
            border-radius: 10px;
            font-size: 13px;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.3s;
            z-index: 1000;
            box-shadow: 0 4px 20px rgba(34,197,94,0.3);
        }
        .toast.show { opacity: 1; transform: translateY(0); }
        .export-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.85);
            backdrop-filter: blur(8px);
            z-index: 100;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .export-modal.active { display: flex; }
        .export-content {
            background: linear-gradient(135deg, #1a1a2e 0%, #16162a 100%);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            padding: 20px;
            max-width: 700px;
            width: 100%;
            max-height: 85vh;
            overflow: auto;
            box-shadow: 0 20px 60px rgba(0,0,0,0.5);
        }
        .export-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }
        .export-header h2 { 
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .export-header h2 svg { width: 20px; height: 20px; color: #3b82f6; }
        .close-btn {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
            color: #888;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }
        .close-btn:hover { background: rgba(239,68,68,0.2); color: #ef4444; border-color: rgba(239,68,68,0.3); }
        .close-btn svg { width: 16px; height: 16px; }
        .export-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-bottom: 12px;
        }
        .export-field label {
            display: block;
            color: #888;
            font-size: 11px;
            margin-bottom: 4px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .export-field input,
        .export-field select {
            width: 100%;
            padding: 10px 12px;
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 13px;
            transition: all 0.2s;
        }
        .export-field input:focus,
        .export-field select:focus { outline: none; border-color: #3b82f6; }
        .export-textarea {
            width: 100%;
            height: 280px;
            background: rgba(0,0,0,0.4);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
            color: #a0f0a0;
            font-family: 'Fira Code', 'Consolas', monospace;
            font-size: 11px;
            padding: 12px;
            resize: vertical;
            line-height: 1.5;
        }
        .export-textarea:focus { outline: none; border-color: #3b82f6; }
        .export-buttons {
            display: flex;
            gap: 10px;
            margin-top: 16px;
        }
        .export-buttons .btn { flex: 1; justify-content: center; padding: 12px; }
        .btn-success { background: linear-gradient(135deg, #22c55e, #16a34a); }
        .btn-success:hover { box-shadow: 0 4px 12px rgba(34,197,94,0.3); }
    </style>
</head>
<body>
    <div class="header">
        <div style="display:flex;align-items:center;gap:20px;flex-wrap:wrap;">
            <h1>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
                Icons Export
            </h1>
            <div class="header-stats">
                Всего: <span id="totalCount"><%= items.length %></span> · 
                Показано: <span id="shownCount"><%= items.length %></span> · 
                Выбрано: <span id="selectedCount">0</span>
            </div>
        </div>
        <div class="toolbar">
            <input type="text" class="search-input" id="search" placeholder="Поиск...">
            <button class="btn btn-secondary" onclick="selectAll()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 11l3 3L22 4"/><path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/></svg>
                Все
            </button>
            <button class="btn btn-secondary" onclick="deselectAll()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/></svg>
                Сброс
            </button>
            <button class="btn" onclick="openExport()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                Экспорт
            </button>
        </div>
    </div>

    <div class="grid" id="grid">
        <% items.forEach(item => { %>
        <div class="item" data-shortname="<%= item.shortname %>" data-name="<%= item.name.toLowerCase() %>" onclick="toggleSelect(this)">
            <img src="/icons/<%= item.shortname %>.png" onerror="this.src='/icons/rock.png'" alt="<%= item.name %>">
            <div class="item-name"><%= item.name %></div>
            <div class="item-short"><%= item.shortname %></div>
        </div>
        <% }) %>
    </div>

    <div class="toast" id="toast">Скопировано!</div>

    <div class="export-modal" id="exportModal">
        <div class="export-content">
            <div class="export-header">
                <h2>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                    Экспорт ссылок
                </h2>
                <button class="close-btn" id="closeBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
                </button>
            </div>
            <div class="export-row">
                <div class="export-field">
                    <label>Базовый URL</label>
                    <input type="text" id="baseUrl" value="<%= baseUrl %>">
                </div>
                <div class="export-field">
                    <label>Формат</label>
                    <select id="exportFormat">
                        <option value="csv">CSV</option>
                        <option value="json">JSON</option>
                        <option value="links">Только ссылки</option>
                        <option value="markdown">Markdown</option>
                    </select>
                </div>
            </div>
            <textarea class="export-textarea" id="exportText" readonly></textarea>
            <div class="export-buttons">
                <button class="btn btn-success" id="copyBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 01-2-2V4a2 2 0 012-2h9a2 2 0 012 2v1"/></svg>
                    Копировать
                </button>
                <button class="btn" id="downloadBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                    Скачать
                </button>
            </div>
        </div>
    </div>

    <script>
        const selected = new Set();
        const baseUrlDefault = '<%= baseUrl %>';

        // Event listeners
        document.getElementById('closeBtn').addEventListener('click', closeExport);
        document.getElementById('copyBtn').addEventListener('click', copyExport);
        document.getElementById('downloadBtn').addEventListener('click', downloadExport);
        document.getElementById('baseUrl').addEventListener('input', updateExport);
        document.getElementById('exportFormat').addEventListener('change', updateExport);
        document.getElementById('exportModal').addEventListener('click', function(e) {
            if (e.target === this) closeExport();
        });

        function toggleSelect(el) {
            const shortname = el.dataset.shortname;
            if (selected.has(shortname)) {
                selected.delete(shortname);
                el.classList.remove('selected');
            } else {
                selected.add(shortname);
                el.classList.add('selected');
            }
            updateSelectedCount();
        }

        function selectAll() {
            document.querySelectorAll('.item:not([style*="display: none"])').forEach(el => {
                selected.add(el.dataset.shortname);
                el.classList.add('selected');
            });
            updateSelectedCount();
        }

        function deselectAll() {
            selected.clear();
            document.querySelectorAll('.item').forEach(el => el.classList.remove('selected'));
            updateSelectedCount();
        }

        function updateSelectedCount() {
            document.getElementById('selectedCount').textContent = selected.size;
        }

        function showToast(msg) {
            const toast = document.getElementById('toast');
            toast.textContent = msg;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
        }

        document.getElementById('search').addEventListener('input', function() {
            const q = this.value.toLowerCase().trim();
            let shown = 0;
            document.querySelectorAll('.item').forEach(el => {
                const match = el.dataset.shortname.includes(q) || el.dataset.name.includes(q);
                el.style.display = match ? '' : 'none';
                if (match) shown++;
            });
            document.getElementById('shownCount').textContent = shown;
        });

        function openExport() {
            if (selected.size === 0) {
                showToast('Выберите предметы');
                return;
            }
            document.getElementById('exportModal').classList.add('active');
            updateExport();
        }

        function closeExport() {
            document.getElementById('exportModal').classList.remove('active');
        }

        function updateExport() {
            const baseUrl = document.getElementById('baseUrl').value;
            const format = document.getElementById('exportFormat').value;
            const items = [];
            
            document.querySelectorAll('.item.selected').forEach(el => {
                items.push({
                    name: el.querySelector('.item-name').textContent,
                    shortname: el.dataset.shortname,
                    url: baseUrl + '/icons/' + el.dataset.shortname + '.png'
                });
            });

            let output = '';
            if (format === 'csv') {
                output = 'Название,Shortname,URL\n';
                items.forEach(i => { output += '"' + i.name + '","' + i.shortname + '","' + i.url + '"\n'; });
            } else if (format === 'json') {
                output = JSON.stringify(items, null, 2);
            } else if (format === 'links') {
                items.forEach(i => { output += i.url + '\n'; });
            } else if (format === 'markdown') {
                output = '| Название | Shortname | URL |\n|----------|-----------|-----|\n';
                items.forEach(i => { output += '| ' + i.name + ' | ' + i.shortname + ' | ' + i.url + ' |\n'; });
            }

            document.getElementById('exportText').value = output;
        }

        function copyExport() {
            const text = document.getElementById('exportText').value;
            navigator.clipboard.writeText(text).then(() => {
                showToast('Скопировано!');
            }).catch(() => {
                // Fallback
                const ta = document.getElementById('exportText');
                ta.select();
                document.execCommand('copy');
                showToast('Скопировано!');
            });
        }

        function downloadExport() {
            const text = document.getElementById('exportText').value;
            const format = document.getElementById('exportFormat').value;
            const ext = format === 'json' ? 'json' : format === 'markdown' ? 'md' : 'txt';
            const blob = new Blob([text], { type: 'text/plain' });
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = 'icons-export.' + ext;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(a.href);
            showToast('Файл скачан!');
        }
    </script>
</body>
</html>
